<!DOCTYPE html>
<html>
<head>
  <title>BrewHopper</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<body>
<!-- Beginning of Nav Bar -->
<div class="ui menu">
  <div class="header item">
    <%= link_to 'Brew Hopper', root_path %>
  </div>

  <!-- Begin Dropdown Menu -->
  <div class="ui dropdown item">
    Styles
    <i class="dropdown icon"></i>
    <div class="menu">
    <% @styles.each do |style| %>
      <%= link_to style.name, style_path(style), :class => 'item' %>
    <% end %>
    </div>
  </div>
  <!-- End of Dropdown Menu -->
  <div class="item">
    <%= link_to 'Beers', beers_path %>
  </div>
  
  <div class="item">
    <%= link_to 'Brewers', brewers_path%>
  </div>
  
    <% if logged_in? %>
      <div class="item" id="login"> 
       
      </div>
    <% else %>
      <div class="item" id="login">
        <%= link_to 'Log In', login_path %> | <%= link_to 'Sign up', signup_path %>
      </div>
    <% end %>
</div>
<!-- End of Nav Bar -->

<!-- Login in Messages -->
<% if flash[:welcome] %>
        <h4 class="bg-success flash"><%= flash[:welcome] %></h4>
    <% end %>

    <% if flash[:error] %>
        <h4 class="bg-danger flash"><%= flash[:error] %></h4>
    <% end %>
<!-- End of login Messages -->

<script>
  $(function(){
    $('.dropdown').dropdown({transition: 'drop'});
  });
</script>

</body>
<!-- <br>
<br> -->
<%= yield %>
</html>
