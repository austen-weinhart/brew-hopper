<h1>Add Your Brewery Now!</h1>


<%= form_for @brewer, html: { multipart: true } do |f| %>

<div>
	<%= f.label :brewery %>
	<%= f.text_field :brewery %>
</div>
<br>
<div>
	<%= f.label :address %>
	<%= f.text_field :address %>
</div>
<br>
<div>
	<%= f.label :zip_code %>
	<%= f.text_field :zip_code %>
</div>
<br>
<div>
	<%= f.label :website %>
	<%= f.text_field :website %>
</div>

<div>
	<%= f.label :image %>
	<%= f.file_field :image, class: "form-control"  %>
</div>
<br>
<div>
	<%= f.submit "submit" %>
</div>
<div>
	<button><%= link_to "Go Back", brewers_path %></button>
</div>

<% end %>