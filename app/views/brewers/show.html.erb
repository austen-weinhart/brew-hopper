<h1><%= @brewer.brewery %></h1>

<div class="basic horizontal segment">
    <div class="ui four cards">
            
        <div class="ui card">     
          <div class="ui medium centered image">
            <%= image_tag(@brewer.image_url, :alt => "@brewer.brewery") %>
          
                 
          <div class="content">
            <%= link_to @brewer.brewery, brewer_path(@brewer) %>
          </div> <!-- end of content -->
                  
          <div class="extra content">
            <div class="ui green header">
            <%= @brewer.address %> <%= @brewer.zip_code %>
            </div>
            <%= image_tag @brewer.image.url(:square) %>
          </div> <!-- end of extra content -->
          </div> <!-- end of ui medium centered image -->
        </div> <!-- end of ui card -->
      
    </div> <!-- end of ui four cards -->
  </div> <!-- end of basic horizontal segment -->


<br>

<button><%= link_to "Edit Brewery", edit_brewer_path %></button>

<br>

<button><%= link_to "Delete Brewery", brewers_path, method: :delete, data: {confirm: "Are you sure you wish to delete this post?"} %></button>

<br>

<button><%= link_to "Go Back", brewers_path %></button>

<br>
<br>
<br>
<br>
<br>

<div class="basic horizontal segment">
  <div class="equal height row">
    <div class="ui four cards">

      <% @brewer.beers.each do |beer| %>
    <div class="ui card">     
      <div class="ui medium centered image">
        <div>
          <% @brewer.beers.index(beer) + 1 %>
            <%= image_tag(beer.image_url, :alt => "@brewer.brewery") %>
            <div class="content">
              <div class="ui green header">
              <%= link_to beer.name, beer_path(beer) %><br>
              </div>
            </div><!-- end content -->

            <div class="extra content">
              <strong>Availability:</strong>   <%= beer.availability %><br>
              <strong>ABV:</strong>   <%= beer.abv %>
            </div>
        </div>
      </div><!-- end ui medium centered image -->
    </div><!-- end ui card -->
    <% end %>
    </div><!-- end ui four cards -->
  </div><!-- end equal height row -->
</div><!-- end basic horizontal segment -->






