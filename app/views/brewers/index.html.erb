<body>
  
  <div class="basic horizontal segment">
  <div class="equal height row">
    <div class="ui four cards">
    
      <% @brewers.each do |brewer| %> 
            
        <div class="ui card">     
          <div class="ui medium centered image">
            <%= image_tag(beer.image_url, :alt => "beer.name", size: "300x300") %>
          </div> <!-- end of ui medium centered image -->
                 
          <div class="content">
            <div class="meta"><i><%= beer.name %></i></div>
            <%= link_to beer.name, beer_path(beer) %>
          </div> <!-- end of content -->
                  
          <div class="extra content">
            <div class="ui green header">$20</div>
          </div> <!-- end of extra content -->
        </div> <!-- end of ui card -->
            
      <% end %> <!-- end of beers.each -->
      
    </div> <!-- end of ui four cards -->
    </div>
  </div> <!-- end of basic horizontal segment -->

</body>


































