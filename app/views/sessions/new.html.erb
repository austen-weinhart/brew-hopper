<!-- This is the log in screen to create a new user session -->
<div class="basic horizontal segment">
<div class="col-md-2">
  <div class="login text-left">
    <h1 class="header">Log In</h1>
    
    <%= form_for :login do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div>
        <%= f.submit 'Log In', class: "btn btn-danger" %> 
        <%#= link_to "Home", beers_path, class: "btn btn-danger" %>
      </div> 
    <% end %>
  </div>  
</div>
</div>